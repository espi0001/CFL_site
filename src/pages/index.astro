<MainLayout>
  <section class="index-hero-spacing">
    <p class="tagline">Discover the Magic</p>
    <h1>Copenhagen <br /> <span class="light">Light</span> Festival</h1>
    <div class="to_links">
      <div class="link_et">
        <Links variant="primary">Explore</Links>
      </div>
      <div class="link_to">
        <Links variant="secondary" Linket="/contact">Contact<i class="fa-solid fa-chevron-right fa-0.5x"></i></Links>
      </div>
    </div>
    <Timer />
  </section>

  <section class="discover_flex">
    <div>
      <hr class="hr_styling" />
      <p class="tagline">Immerse yourself in a captivating display of light-based works by renowned <br />designers.</p>
      <h2>Discover the Mesmerizing <br />World of <span class="light">Light Art</span></h2>
      <ul>
        <li>Immerse in luminous wonders at Copenhagen Light Festival.</li>
        <li>Join international and local audiences in celebrating the magic of light.</li>
        <li>Explore Copenhagen's radiance at the Light Festival.</li>
      </ul>
    </div>
    <div class="fifty">
      <div class="cph_image">
        <img src="/cph_light_1.jpeg" alt="Lys over København" />
      </div>
    </div>
  </section>
  <section>
    <LokalMenupt2 tagline="Highlights" h2del1="Explore the " h2del2="Program" teksten="Discover stunning light art installations and events." />
    <div class="cards">
      <LokalMenu navigation="/events" image="https://copenhagenlightfestival.org/wp-content/uploads/2024/02/74-Unorbit-1-scaled.jpg" tagline="Events" header="Explore our Events" text="Immerse yourself in the captivating world of light art." />
      <LokalMenu navigation="/installations" image="https://copenhagenlightfestival.org/wp-content/uploads/2021/02/BIOLUMINESCENCE.jpg" tagline="Installations" header="Explore our Installations" text="Uncover the enchanting world of light art and its creators." />
      <LokalMenu navigation="/map" image="https://copenhagenlightfestival.org/wp-content/uploads/2024/02/09.-Lanterne-Tournante-1.jpg" tagline="Map" header="Choose your Route" text="Explore the magical routes at the Festval and choose your favorite one." />
    </div>
  </section>
  <section class="discover_flex">
    <div class="fifty">
      <div>
        <video autoplay muted loop src="/Sequence_01_3.mp4"></video>
      </div>
    </div>
    <div class="fifty">
      <hr class="hr_styling" />
      <h2>Get Early Access <span class="light">Information</span> <br />Here</h2>
      <Newsletter info_text="Sign up to receive exclusive updates and VIP experiences." />
    </div>
  </section>
</MainLayout>

<style>
  .fifty {
    width: 100%;
    margin-inline: auto;
  }

  .index-highlights {
    display: flex;
    justify-content: center;
  }
  .center_text {
    text-align: center;
  }

  .cph_image {
    mask-image: linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.65) 60%);
  }
  .to_links {
    display: flex;
  }
  li {
    padding-top: 8px;
    margin-left: 15px;
  }
  i {
    margin-left: 10px;
  }

  .index-hero-spacing {
    margin-bottom: 250px;
  }
  .index-background {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  .row {
    margin: 48px 0;
  }
  .content img {
    width: 26.67px;
    height: 21.33px;
    margin-bottom: 12px;
  }
  .content {
    margin-bottom: 40px;
  }
  .contact_info a {
    color: var(--text-color);
    text-decoration: none;
  }
  .contact_info a:hover {
    color: var(--action-color);
  }
  h5 {
    margin-bottom: 8px;
  }
  iframe {
    width: 100%;
    height: 450px;
  }

  /* ___________________________ TABLET  ___________________________*/
  /* reglerne gælder når skærmen er minimum 768px */
  @media screen and (min-width: 768px) {
    .fifty {
      margin-inline: inherit;
    }
  }

  /* ___________________________ DESKTOP  ___________________________*/
  @media screen and (min-width: 1024px) {
    .cards {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 32px;
      margin-top: 50px;
    }
    .discover_flex {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 80px;
    }
    .contact_grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 80px;
    }
    .fifty {
      margin-inline: inherit;
      align-content: center;
    }
    iframe {
      width: 600px;
      height: 450px;
    }
  }
</style>
