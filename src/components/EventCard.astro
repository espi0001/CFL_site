---
const { data } = Astro.props;

console.log(data);
---

<article>
  <div class="nr1">
    <img src={data.image} alt={data.name} />
    <h4>{data.name}</h4>
    <p>{data.date}</p>
    <button>Learn more</button>
  </div>
</article>

<style>
  article {
    border-color: var(--text-color);
  }
  .nr1 {
    position: relative;
  }
  .nr1::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url(${data.image});
    filter: brightness(50%);
    z-index: -1;
    background-repeat: no-repeat;
    object-fit: contain;
  }
  h4 {
    text-align: center;
  }
  p {
    text-align: center;
  }
</style>
